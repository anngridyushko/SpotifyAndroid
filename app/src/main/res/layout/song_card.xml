<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="song"
            type="com.example.spotidroidapp.model.Song" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/SensibleDefaultsMaterialCard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#C8C8C8">


            <ImageView
                android:id="@+id/song_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:imageUrl="@{song.album.images[0].url}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_loading" />

            <TextView
                android:id="@+id/song_name"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="223dp"
                android:layout_height="26dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="ddd"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/song_image"
                app:layout_constraintStart_toEndOf="@id/song_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/song_artist"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="artist"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/song_name"
                app:layout_constraintTop_toBottomOf="@id/song_name" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/song_like"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:button="@drawable/like_selector"
                android:checked="false"
                android:scaleX="2"
                android:scaleY="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>